{
	"version": "2.0.0",
	"runner": "ternimal",
	"type": "shell",
	"echoCommand": true,
	"presentation": {
		"reveal": "always"
	},
	"tasks": [
		// c++
		{
			"label": "save and compile for c++",
			"command": "g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"group": "build",
			"problemMatcher":{
				"fileLocation":[
					"relative",
					"${workspaceRoot}"
				],
				"pattern":{
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		// c
		{
			"label": "save and compile for c",
			"command": "gcc",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"group": "build",
			"problemMatcher":{
				"fileLocation":[
					"relative",
					"${workspaceRoot}"
				],
				"pattern":{
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		// binary
		{
			"label": "execute",
			"command":"${fileDirname}/${fileBasenameNoExtension}",
			"group": "test"
		}
	]
}